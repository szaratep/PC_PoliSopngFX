<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.poli.controller.CarritoController">

    <top>
        <HBox spacing="10" padding="10">
            <Label text="Carrito ID:"/>
            <TextField fx:id="txtCarritoId" prefWidth="100"/>
            <Label text="Usuario ID:"/>
            <TextField fx:id="txtUsuarioId" prefWidth="100"/>
            <Button text="Cargar Carrito" onAction="#onCargarCarrito"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tablaItems">
            <columns>
                <TableColumn fx:id="colId" text="ID Item" prefWidth="80"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" padding="10">
            <Button text="Agregar Item" onAction="#onAgregarItem"/>
            <Button text="Editar Item" onAction="#onEditarItem"/>
            <Button text="Eliminar Item" onAction="#onEliminarItem"/>
        </HBox>
    </bottom>

</BorderPane>
