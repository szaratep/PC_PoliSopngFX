<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.poli.controller.EditarProductoController"
      stylesheets="@../style/menu.css">

    <Label text="Editar Producto"
           style="-fx-font-size: 26px; -fx-font-weight: bold;" />

    <GridPane hgap="15" vgap="15">
        <padding><Insets top="10" left="10" right="10" bottom="10"/></padding>

        <!-- ID del producto -->
        <Label text="ID Producto:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIdProducto" prefWidth="250"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Button text="Cargar Datos"
                onAction="#cargarProducto"
                GridPane.rowIndex="0" GridPane.columnIndex="2"
                prefWidth="120"/>

        <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" prefWidth="250"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboTipo" prefWidth="250"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="GÃ©nero:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtGenero" prefWidth="250"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Precio:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrecio" prefWidth="250"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Stock:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtStock" prefWidth="250"
                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Guardar Cambios"
            onAction="#guardarCambios"
            prefWidth="200"/>

    <Button text="Volver"
            onAction="#volver"
            prefWidth="200"/>

</VBox>
