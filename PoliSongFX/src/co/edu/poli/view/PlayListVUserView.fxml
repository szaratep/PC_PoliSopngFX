<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.poli.controller.PlaylistUserController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestión de Playlists" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Nombre:" />
                <TextField fx:id="txtNombre" prefWidth="200" />
                <Label text="Pública:" />
                <CheckBox fx:id="chkPublica" />
            </HBox>

            <HBox spacing="20">

                <!-- Tabla de todas las canciones del sistema -->
                <VBox spacing="5">
                    <Label text="Todas las canciones:" />
                    <TableView fx:id="tablaTodasCanciones" prefHeight="200" prefWidth="350">
                        <columns>
                            <TableColumn fx:id="colIdCancionSistema" prefWidth="80" text="ID Canción" />
                            <TableColumn fx:id="colNombreCancionSistema" prefWidth="180" text="Nombre" />
                            <TableColumn fx:id="colDuracionSistema" prefWidth="80" text="Duración" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Tabla de canciones en la playlist -->
                <VBox spacing="5">
                    <Label text="Canciones en la Playlist:" />
                    <TableView fx:id="tablaCanciones" prefHeight="200" prefWidth="350">
                        <columns>
                            <TableColumn fx:id="colIdCancion" prefWidth="80" text="ID Canción" />
                            <TableColumn fx:id="colNombreCancion" prefWidth="180" text="Nombre" />
                            <TableColumn fx:id="colDuracion" prefWidth="80" text="Duración" />
                        </columns>
                    </TableView>
                </VBox>

            </HBox>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="12">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button onAction="#onCrearPlaylist" text="Crear Playlist" />
            <Button onAction="#onAgregarCancion" text="Agregar Canción" />
            <Button onAction="#onEliminarCancion" text="Eliminar Canción" />
            <Button onAction="#onVerPlaylists" text="Ver Playlists" />
            <Button onAction="#onVolver" text="Volver" />
        </HBox>
    </bottom>

</BorderPane>
