<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.poli.controller.GestionUsuarioController"
      stylesheets="@../style/menu.css"
      padding="20">

    <Label text="Gestión de Usuarios"
           style="-fx-font-size: 26px; -fx-font-weight: bold;" />

    <TableView fx:id="tablaUsuarios" prefWidth="750" prefHeight="350">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="colCorreo" text="Correo" prefWidth="200"/>
            <TableColumn fx:id="colRol" text="Rol" prefWidth="120"/>
            <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="200"/>
        </columns>
    </TableView>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Registrar Usuario"
                prefWidth="200"
                onAction="#abrirRegistrarUsuario"/>

        <Button text="Eliminar Usuario"
                prefWidth="200"
                onAction="#eliminarUsuario"/>

        <Button text="Volver"
                prefWidth="200"
                onAction="#volverMenu"/>
    </HBox>

</VBox>
