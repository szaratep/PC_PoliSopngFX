<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="20" stylesheets="@../style/menu.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.poli.controller.GestionInventarioController">

    <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Catálogo Proveedor" />

    <!-- Tabla de vinilos -->
    <TableView fx:id="tablaProductos" prefHeight="350" prefWidth="750">
        <columns>
            <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
            <TableColumn fx:id="colTipo" prefWidth="100" text="Tipo" />
            <TableColumn fx:id="colArtista" prefWidth="150" text="Artista" />
            <TableColumn fx:id="colAnio" prefWidth="100" text="Año" />
            <TableColumn fx:id="colPrecio" prefWidth="100" text="Precio" />
            <TableColumn fx:id="colStock" prefWidth="100" text="Stock" />
        </columns>
    </TableView>

    <!-- Botones -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnRegistrarProducto" onAction="#abrirRegistrarProducto" prefWidth="180" text="Registrar Producto" />
        <Button fx:id="btnEditarProducto" onAction="#abrirEditarProducto" prefWidth="180" text="Editar Seleccionado" />
        <Button fx:id="btnEliminarProducto" onAction="#eliminarProducto" prefWidth="180" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Eliminar Seleccionado" />
        <Button fx:id="btnActualizarLista" onAction="#actualizarLista" prefWidth="180" text="Actualizar Lista" />
        <Button fx:id="btnVolver" onAction="#volverMenuPrincipal" prefWidth="180" text="Volver" />
    </HBox>

</VBox>
