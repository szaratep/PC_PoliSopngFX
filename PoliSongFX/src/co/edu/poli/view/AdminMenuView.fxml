<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" stylesheets="@../style/menu.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.poli.controller.AdminMenuController">

    <!-- ENCABEZADO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60" style="-fx-background-color: #1a1a1a; -fx-padding: 15;">
            <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Menú del Administrador" />
        </HBox>
    </top>

    <!-- CENTRO: BOTONES -->
    <center>
        <VBox alignment="CENTER" prefWidth="350" spacing="20">

            <!-- Nombre del administrador activo -->
            <Label fx:id="labelAdminNombre" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Administrador: ---" />
            
            <Button fx:id="btnGestionUsuarios" onAction="#abrirGestionUsuarios" prefHeight="60" prefWidth="250" text="Gestionar Usuarios" />
            <Button fx:id="btnGestionProductos" onAction="#abrirGestionProductos" prefHeight="60" prefWidth="250" text="Gestionar Productos" />
            <Button fx:id="btnMiPerfil" onAction="#abrirMiPerfil" prefHeight="60" prefWidth="250" text="Mi Perfil" />

        </VBox>
    </center>

    <!-- PIE DE PÁGINA -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Button fx:id="btnCerrarSesion" onAction="#cerrarSesion" prefHeight="50" prefWidth="200" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Cerrar Sesión" />
            <Button fx:id="btnVolverMenu" onAction="#volverMenuPrincipal" prefHeight="50" prefWidth="200" text="Volver" />
        </HBox>
    </bottom>

</BorderPane>
