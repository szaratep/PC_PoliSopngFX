<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.poli.controller.UserMenuController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #1a1a1a; -fx-padding: 15;">
            <Label text="Menú del Usuario" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button text="Catálogo de Vinilos" onAction="#irCatalogo" prefWidth="250"/>
            <Button text="Carrito de Compras" onAction="#irCarrito" prefWidth="250"/>
            <Button text="Mi Perfil" onAction="#irMiPerfil" prefWidth="250"/>
            <Button text="Historial de Compras" onAction="#irHistorial" prefWidth="250"/>
            <Button text="Calificar Productos" onAction="#irCalificarProductos" prefWidth="250"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Button text="Cerrar Sesión" onAction="#cerrarSesion" style="-fx-background-color: #d9534f; -fx-text-fill: white;" prefWidth="200"/>
        </HBox>
    </bottom>

</BorderPane>
